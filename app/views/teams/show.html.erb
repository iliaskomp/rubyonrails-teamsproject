<p id="notice"><%= notice %></p>

<h1>
  <%= @team.name %>
</h1>

<h3> Members </h3>
<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Birthday</th>
      <th>Position</th>
      <th>Number</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

<% Member.all.each do |member| %>
    <% if @team.id == member.team_id %>
              <tr>
                <td><%= member.firstname %></td>
                <td><%= member.lastname %></td>
                <td><%= member.birthday %></td>
                <td><%= Position.find_by_id(member.position_id).name%></td>
                <td><%= member.number %></td>
                <td><%= Team.find_by_id(member.team_id).name %></td>

                <td><%= link_to 'Show', member %></td>
                <td><%= link_to 'Edit', edit_member_path(member) %></td>
                <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>

    <% end %>
<% end %>

    </tbody>
</table>

<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
